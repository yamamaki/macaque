<?xml version="1.0" encoding="utf-8"?>  
<selector  
    xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:state_pressed = "true">     
	<shape>  
            <!-- 渐变 -->  
            <gradient  
                android:startColor="#8cd050"  
                android:endColor="#FFFFFF"  
                android:angle="270" />  
            <!-- 圆角 -->  
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
    
    <item android:state_pressed = "false">
        	<shape>  
            <!-- 渐变 -->  
            <gradient  
                android:startColor="#8cd050"  
                android:endColor="#FFFFFF"  
                android:angle="270" />  
            <!-- 圆角 -->  
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
       		 </shape>  
    </item>
</selector>  